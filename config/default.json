{
  "main": {
    "jwt": {
      "key": "signature-key"
    },
    "server": {
      "port": 3000
    },
    "dbconfig": {
      "host": "localhost",
      "port": 3306,
      "user": "leo",
      "password": "passwordplaceholder",
      "database": "cart"
    },
    "mongodb": {
      "url": ""
    },
    "redis": {
      "url": "",
      "port": ""
    },
    "log": {
      "appenders":
      [
        //错误日志
        {
            "category":"errorLogger",             //logger名称
            "type": "dateFile",                   //日志类型
            "filename": "logs/error/error",             //日志输出位置
            "alwaysIncludePattern":true,          //是否总是有后缀名
            "pattern": "-yyyy-MM-dd-hh.log",      //后缀，每小时创建一个新的日志文件
            "path": "error"                  //自定义属性，错误日志的根目录
        },
        //响应日志
        {
            "category":"resLogger",
            "type": "dateFile",
            "filename": "logs/response/response",
            "alwaysIncludePattern":true,
            "pattern": "-yyyy-MM-dd-hh.log",
            "path": "response"
        }
      ],
      "levels":                                   //设置logger名称对应的的日志等级
      {
        "errorLogger":"ERROR",
        "resLogger":"ALL"
      },
      "baseLogPath": "logs"                  //logs根目录
    }
  }
}
